<%= render 'shared/navbarwhite' %>
<html class="coffee">
<div class="banner_wrapper_dashboard">
  <div class="container-dashboard">
    <div class="drink-title-frame">
        <h1 class="beverage-title">COFFEE</h1>
        <h2 class="drink-sub">Click on an item for more details</h2>
    </div>
        <% @coffees.order("name asc").each do |coffee| %>
            <div class="beverages">
            <h1 class="drink-title"><%= coffee.name %></h1>
                <div class="showhide" style="display:none">
                    <p class="drink-para"><%= coffee.description %></p>
                </div>
            </div>

            <div class="quantity-buttons">
                <%= simple_form_for coffee do |f| %>
                    <%= f.hidden_field :quantity, :value => "#{coffee.quantity == 0 ? coffee.quantity = coffee.quantity : coffee.quantity - 1}"  %>
                    <%= f.button :submit, "-", class: "btn-drink" %>
                <% end %> 

                <p class="number-beverage"><%= coffee.quantity %></p>

                <%= simple_form_for coffee do |f| %>
                    <%= f.hidden_field :quantity, :value => "#{coffee.quantity + 1}"  %>
                    <%= f.button :submit, "+", class: "btn-drink" %>
                <% end %> 
            </div>
        <% end %>
  </div>
</div>