<%= render 'shared/navbarnavy' %>
<div class="container-pref-crew">
    <% @guest_users.each do |guest_user|  %>
        <div class="guest-info-box" >
            <%= guest_user.name %>'s information:
            <div class="guest-info-crew">
                <% if guest_user.guest_information == nil %>
                    <%= "There is no Guest Information for #{guest_user.name}" %>
                <% else %>
                    <%= link_to "Guest Information", guest_information_path(guest_user.guest_information) %>
                <% end %>
            </div>
            <div class="guest-pref-crew">
                <% if guest_user.guest_preference == nil %>
                    <%= "There is no Guest Preferences for #{guest_user.name}" %>
                <% else %>
                <%= link_to "Guest Preferences", guest_preference_path(guest_user.guest_preference) %>
                <% end %>
            </div>
        </div>
    <% end %>
</div>