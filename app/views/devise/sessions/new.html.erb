<html class="home-background">
<div class="banner_wrapper_login">
  <div class="container_login_text">
  <%= image_tag("caslogo-transparent.png", class:"caslogo-transparent" ) %>
  <h1 class="login-text">CONCIERGE AT SEA</h1>
  <h1 class="login-text">LAUNCH YOUR CRUISING PORT OF CALL</h1>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  label: false,
                  input_html: { autocomplete: "email" }, 
                  placeholder: "george_clooney@whatelse.com" %>
      <%= f.input :password,
                  required: false,
                  label: false,
                  input_html: { autocomplete: "current-password" },
                  placeholder: "••••••••" %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    <%= render "devise/shared/links" %>
    </div>
    <button type="button" class="btn-one">
    <%= f.button :submit, "Login" %>
    </button>
  <% end %>
    </div>
</div>

