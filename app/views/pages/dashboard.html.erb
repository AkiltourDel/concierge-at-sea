<% if current_user.crew? && @total_orders > 0 %>
  <%= link_to order_path, :action => 'go' do %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)),
    url(https://images.pexels.com/photos/1226398/pexels-photo-1226398.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260)">
    <% if @total_orders == 1 %>
      <%= "#{@total_orders} Order pending" %>
    <% else %>
      <%= "#{@total_orders} Order's pending" %>
    <% end %> 
    </div>  
  <% end %>
<% end %>

<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)),
  url(https://images.pexels.com/photos/3768/sky-sunny-clouds-cloudy.jpg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260)">
  <% if request.location.latitude == nil  %>
    <div class="weather-heading">
      Active your localisation if you want to display the current weather
    </div>
  <% else %>
    <i class="<%= @icon %> weather-icon"></i>
    <div class="weather-heading">
      Today's Weather
    <ul class="weather-list">
      <li class="weather-list"><%= @currently[:summary] %></li>
      <li class="weather-list"><%= @currently[:temperature] %> Â°C</li>
      <li class="weather-list"><%= @currently[:precipProbability] %> % chance of rain</li>
      <li class="weather-list">Nearest storm : <%= @currently[:nearestStormDistance] %> Kms away</li>
      <li class="weather-list">Sunrise : <%= DateTime.strptime("#{@daily[:sunriseTime]}",'%s').strftime("%H:%M") %></li>
      <li class="weather-list">Sunset : <%= DateTime.strptime("#{@daily[:sunsetTime]}",'%s').strftime("%H:%M") %></li> 
    </ul>
    </div>
  <% end %>
</div>

