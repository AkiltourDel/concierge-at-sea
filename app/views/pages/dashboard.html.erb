    <%= link_to new_user_guest_information_path(current_user), :action => 'go' do %>
    <div class="dash-card">My information</div>
    <% end %>
  <% else %>
    <%= link_to edit_guest_information_path(current_user), :action => 'go' do %>
      <div class="dash-card">Modify my information</div>
    <% end %>
  <% end %>

  <% if current_user.guest_preference == nil %>
    <%= link_to new_user_guest_preference_path(current_user), :action => 'go' do %> 
      <div class="dash-card">My preferences</div>
    <% end %>
  <% else %>
    <%= link_to edit_guest_preference_path(current_user), :action => 'go' do %>
      <div class="dash-card">Modify my preferences</div>
    <% end %>
  <% end %>
<% end %>

